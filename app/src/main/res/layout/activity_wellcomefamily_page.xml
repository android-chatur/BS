<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abcd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".UI.WellcomefamilyPage">


    <ImageView
        android:id="@+id/twitter_l"
        android:layout_width="match_parent"
        android:layout_height="350dp"

        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/back_image" />

    <RelativeLayout
        android:id="@+id/topLayouts"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/logoside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"

            android:src="@drawable/drawer" />

        <ImageView
            android:id="@+id/img_change_lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/menu"

            />

        <LinearLayout
            android:id="@+id/searchcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"

            android:gravity="center"
            android:orientation="horizontal">


        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/l_layou"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/topLayouts"
        android:layout_centerInParent="true"
        android:layout_gravity="center"

        android:background="@drawable/gradient_bg"
        android:layout_marginTop="25dp"

        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayouts"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"

        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"

            android:gravity="start|center"
            android:text="Welcome to\nOur Family"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="270dp"
            android:layout_height="10dp"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/horizanal_image" />

        <TextView
            android:id="@+id/txtla_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"


            android:layout_marginTop="15dp"
            android:gravity="start|center"
            android:text="We are happy and excited to have you with us and to you knowyou better we would love to ask you a couple of questions."
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter_l"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/l_layout_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtlable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:gravity="start|center"
                    android:text="There is a membership for everyone, What is yours?"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:rotation="270"
                    android:src="@drawable/down_arrow"
                    app:tint="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rw_membership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none"

                    />


                <TextView
                    android:id="@+id/txtlable1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="15dp"
                    android:gravity="start|center"
                    android:text="Introduce yourself, which community do you belong to?"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:rotation="270"
                    android:src="@drawable/down_arrow"
                    app:tint="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rw_comminity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:scrollbars="none"

                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>