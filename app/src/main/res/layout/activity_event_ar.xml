<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/abcd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fef5e4"
    android:layoutDirection="rtl"
    tools:context=".UI.Booth_Activity">


    <RelativeLayout
        android:id="@+id/topLayouts"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/home_top">

        <ImageView
            android:id="@+id/logoside"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:rotation="180"
            android:src="@drawable/back_white"


            />


        <ImageView
            android:id="@+id/logoside1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/menu"
            android:visibility="gone"

            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/logosid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayouts"
        android:scaleType="fitXY"
        android:src="@drawable/verticle_image"
        android:visibility="visible"

        />


    <ImageView
        android:id="@+id/logosid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/verticle_image"
        android:visibility="gone"

        />

    <LinearLayout
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayouts"
        android:layout_marginTop="15dp"
        android:layout_marginRight="65dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aboutbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="start"
            android:text="إيه إف سي كرنفال"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/twitter_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="5dp"
            android:src="@drawable/home_logo_well" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fff123"
        android:layout_below="@+id/scroll"

        android:background="@drawable/drawer_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/aboutus_recyclerview_gallery"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/home" />

            <Button
                android:id="@+id/proceed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="5dp"
                android:background="@drawable/buttonr"
                android:gravity="center"
                android:text="نوع الفعالية هنا"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="50dp"
                android:gravity="start"
                android:text="حول الفعاليات"
                android:textColor="@color/vispart_color"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/aboutqw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:gravity="start"
                android:text="في براي سليم نحن حدث كل يوم لطلاب الأسرة للاستمتاع والتعلم كل يوم.\nفي براي سليم نحن حدث كل يوم لطلاب الأسرة للاستمتاع والتعلم كل يوم."
                android:textColor="@color/vispart_color"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtlable1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:background="@color/black"
                android:gravity="start"
                android:padding="10dp"
                android:text="تفاصيل الفعالية"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_bene"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">


                        <TextView
                            android:id="@+id/benefit_ofevent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:gravity="top"
                            android:singleLine="true"
                            android:text="ميزة هذه الفعالية"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/down_arrow_benefit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/up_arrow_bene"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/down_arrow"
                            android:visibility="gone"
                            app:tint="@color/black" />


                    </RelativeLayout>


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_benefit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/benefit_heding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="top"
                        android:singleLine="true"
                        android:text="ميزة هذه الفعالية"
                        android:textColor="@color/buss_oner_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/benefit_subheding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="top"
                        android:singleLine="false"
                        android:text="في براي سليم نحن حدث كل يوم لطلاب الأسرة للاستمتاع والتعلم كل يوم.\nفي براي سليم نحن حدث كل يوم لطلاب الأسرة للاستمتاع والتعلم كل يوم."
                        android:textColor="@color/buss_oner_color"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_gala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">


                        <TextView
                            android:id="@+id/dxt_galary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:gravity="top"
                            android:singleLine="true"
                            android:text="المعرض الفني"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/down_arrow_gallary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/up_arrow_gallary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/down_arrow"
                            android:tint="@color/black"
                            android:visibility="gone" />


                    </RelativeLayout>

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_galary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rw_gallary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:background="@android:color/transparent"
                        android:scrollbars="none"
                        android:visibility="gone"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.example.barayihsalem.Helper.RoundRectCornerImageView
                            android:id="@+id/ti11"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="start"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/home" />


                        <com.example.barayihsalem.Helper.RoundRectCornerImageView
                            android:id="@+id/ti12"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_gravity="start"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/home" />
                    </LinearLayout>


                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_soci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/lin_membackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">


                        <TextView
                            android:id="@+id/social_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:gravity="top"
                            android:singleLine="true"
                            android:text="وسائل التواصل الاجتماعي الخاصة بنا"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/down_arrow_sm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/down_arrow"
                            app:tint="@color/black" />

                        <ImageView
                            android:id="@+id/up_arrow_sm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"

                            android:src="@drawable/down_arrow"
                            android:visibility="gone"
                            app:tint="@color/black" />


                    </RelativeLayout>


                    <View
                        android:id="@+id/asd"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rw_social"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none"
                        android:visibility="visible"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/facebook" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:src="@drawable/twitter" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/date"
                        android:layout_marginTop="10dp"
                        android:background="@color/thincolcor"></View>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <!--    </LinearLayout>-->

    <LinearLayout
        android:id="@+id/fff123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/food_beve_color"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aboutbqwers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/er"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:gravity="start"
                android:text="الأكشاك المتاحة"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/procee1d"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_drawable"
            android:gravity="center"
            android:text="احجز الكشك الخاص بك"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="normal"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>