<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="3dip">

  <LinearLayout
      android:id="@+id/asd"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="1">

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_weight="0.35"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          card_view:cardCornerRadius="10dp"
          card_view:cardPreventCornerOverlap="true"
          card_view:cardUseCompatPadding="true">

        <com.example.barayihsalem.Helper.RoundRectCornerImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home"

            />


      </androidx.cardview.widget.CardView>

      <!--
                  <ImageView
                      android:id="@+id/iv_image"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:src="@drawable/loading"
                      android:scaleType="fitXY"
                     />-->

    </LinearLayout>

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_gravity="center"
        android:layout_weight="0.22"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_gravity="start"
          android:singleLine="true"
          android:text="Ø³ÙˆØ´ÙŠ ÙˆØ³Ø§Ø´ÙŠÙ…ÙŠ"
          android:textColor="@color/black"
          android:textSize="14dp" />

      <TextView
          android:id="@+id/tv_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_gravity="start"
          android:singleLine="true"
          android:text="20.95 KD"
          android:textColor="@color/black"
          android:textSize="14dp" />

      <TextView
          android:id="@+id/tv_name_sub"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_gravity="start"
          android:layout_marginTop="10dp"
          android:singleLine="true"
          android:text="Ù‚Ø·Ø¹ØªØ§Ù† Ù…Ù† Ø³Ø§Ø´ÙŠÙ…ÙŠ Ø§Ù„ØªÙˆÙ†Ø©"
          android:textColor="@color/black"
          android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card"
        android:layout_gravity="center"
        android:layout_weight="0.43"
        android:gravity="center"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/newly_tick"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:gravity="right"
          android:rotation="90"
          android:src="@drawable/down_arrow"
          app:tint="@color/thincolcor"
          card_view:tint="@color/thincolcor" />


    </LinearLayout>

  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_below="@+id/asd"
      android:background="@color/hinh_color"
      android:layout_marginTop="5dp"></View>
</RelativeLayout>